<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
	<appender name="NETFRAMEWORK" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] %-5p %m %n"></param>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG"/>
			<param name="LevelMax" value="FATAL"/>
		</filter>
	</appender>

	<appender name="NETFRAMEWORK_HIBERNATE_DEBUG" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/hibernate_debug.log"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}][%M] %-5p %c %m %n"></param>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG"/>
			<param name="LevelMax" value="FATAL"/>
		</filter>
	</appender>

	<appender name="NETFRAMEWORK_FILE" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/netframework.log"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}][%M] %-5p %c %m %n"></param>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG"/>
			<param name="LevelMax" value="FATAL"/>
		</filter>
	</appender> 

	<appender name="NETFRAMEWORK_TASK_BUSINESS_APPENDER" 
	class="br.com.netservicos.framework.bootstrap.log.appender.BusinessLogAppender">
		<filter class="br.com.netservicos.framework.bootstrap.log.filter.BusinessLogFilter"/>
	</appender>

	<appender name="NETFRAMEWORK_TASK_APPENDER" 
	         class="br.com.netservicos.framework.bootstrap.log.appender.TecnicalLogAppender">

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}][%M] %-5p %c %m %n"/>
		</layout>

		<filter class="org.apache.log4j.varia.LevelRangeFilter">
		    <param name="LevelMin" value="INFO"/>
			<param name="LevelMax" value="FATAL"/>
		</filter>

	</appender>
	
	<logger name="br.com.netservicos">
		<level value="INFO" />
		<appender-ref ref="NETFRAMEWORK_TASK_BUSINESS_APPENDER"/>
		<appender-ref ref="NETFRAMEWORK_TASK_APPENDER"/>
	</logger>
    
    <logger name="br.com.netservicos.framework">
    		<level value="INFO" />
		<appender-ref ref="NETFRAMEWORK_FILE"/>
		<appender-ref ref="NETFRAMEWORK_TASK_BUSINESS_APPENDER"/>
		<appender-ref ref="NETFRAMEWORK_TASK_APPENDER"/>
	</logger>
    
   	<logger name="br.com.netservicos.framework.bootstrap">
    	<level value="DEBUG" />
		<appender-ref ref="NETFRAMEWORK_FILE"/>
	</logger>

    <logger name="br.com.netservicos.framework.web.filter.compression">
    	<level value="INFO" />
		<appender-ref ref="NETFRAMEWORK_FILE"/>
	</logger>

	<logger name="br.com.netservicos.framework.weblogic.startup.adconfig">
        <level value="DEBUG" />
		<appender-ref ref="NETFRAMEWORK_FILE"/>
		<appender-ref ref="NETFRAMEWORK"/>
	</logger>

    <logger name="org.apache">
    		<level value="WARN" />
	</logger>

    <logger name="org.hibernate.type">
    	<level value="DEBUG" />
		<appender-ref ref="NETFRAMEWORK_HIBERNATE_DEBUG"/>
	</logger>

	 <logger name="org.hibernate.SQL">
	      <level value="DEBUG"/>
		  <appender-ref ref="NETFRAMEWORK_HIBERNATE_DEBUG"/>
     </logger>
  
	<logger name="javawebparts.filter">
    		<level value="WARN" />
	</logger>
    
	<root>
		<level value="DEBUG"/>
		<appender-ref ref="NETFRAMEWORK"/>
	</root>
    
</log4j:configuration>


