<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
						http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<value>classpath:META-INF/enviromentConfig.properties</value>
		</property>
	</bean>
	
	<!-- ########################################################################## -->
	<!--                     Business Delegate Configurations                       -->
	<!-- ########################################################################## -->
	<alias alias="netframework.delegate.name" name="delegate"/>
	<bean id="delegate"
		class="br.com.netservicos.framework.service.delegate.spring.SpringDelegate">
		<property name="name" value="NETCRMCORE_DELEGATE" />
		<property name="serviceContexts">
			<list>
				<value>br/com/netservicos/netcrmcore/cliente/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/oms/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/prospect/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/venda/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/produto/resources/applicationContext-services.xml</value>				
				<value>br/com/netservicos/netcrmcore/geral/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/endereco/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/ordermanagement/resources/applicationContext-services.xml</value>
				<value>br/com/netservicos/netcrmcore/gescom/resources/applicationContext-services.xml</value>
			</list>
		</property>
	</bean>
	
	<!-- ########################################################################## -->
	<!--                        Log Manager Configurations                       -->
	<!-- ########################################################################## -->		
	<bean id="logManager"
			class="br.com.netservicos.framework.util.log.Log4DomJLogManager">
		<property name="logConfigurator" ref="logConfigurator"/>
	</bean>
	
	<bean id="logConfigurator" class="br.com.netservicos.framework.util.log.LogConfigurator">
		<property name="systemPropertyLogConfig" value="netframework.log4j.configuration"/>
	</bean>
	
</beans>